@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        @if (SelectedMedias.Any())
        {
            <div class="d-flex justify-content-between align-items-center mb-2">
                @if (AllMediasSelected)
                {
                    <p class="lead mb-0">
                        @L["AllItemsAreSelected", TotalCount]
                    </p>
                }
                else
                {
                    <p class="lead mb-0">
                        @if (SelectedMedias.Count > 1)
                        {
                            @L["NumberOfItemsOnThisPageAreSelected", SelectedMedias.Count]
                        }
                        else
                        {
                            @L["OneItemOnThisPageIsSelected"]
                        }
                    </p>
                }
                    
                <div>
                    @if ((SelectedMedias.Count == PageSize || SelectedMedias.Count == MediaList.Count) && TotalCount > SelectedMedias.Count)
                    {
                        if (!AllMediasSelected)
                        {
                            <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                        }
                        else
                        {
                            <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                        }
                    }
                    
                    <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedMediasAsync">
                        <Icon Name="@IconName.Delete" /> @L["Delete"]
                    </Button>
                </div>
            </div>
            
            <hr class="my-1 mx-0"/>
        }
        <DataGrid TItem="MediaWithNavigationPropertiesDto"
                  Data="MediaList"
                  
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedMedias"
                  RowSelectable="@((args) => CanDeleteMedia)"
                  SelectedRowsChanged="SelectedMediaRowsChanged"
                  
                  
                  
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                
                @if (CanDeleteMedia && MediaList.Any())
                {
                    <DataGridMultiSelectColumn TItem="MediaWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                
                <DataGridEntityActionsColumn TItem="MediaWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="MediaWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="MediaWithNavigationPropertiesDto"
                                          Visible="@CanEditMedia"
                                          Clicked="async () => await OpenEditMediaModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="MediaWithNavigationPropertiesDto"
                                          Visible="@CanDeleteMedia"
                                          Clicked="() => DeleteMediaAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
               
              <DataGridColumn TItem="MediaWithNavigationPropertiesDto"
                      Field="Media.Title"
                      Caption="@L["Title"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaWithNavigationPropertiesDto"
                      Field="Media.File"
                      Caption="@L["File"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaWithNavigationPropertiesDto"
                      Field="Media.Order"
                      Caption="@L["Order"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaWithNavigationPropertiesDto"
                      Field="Media.IsActive"
                      Caption="@L["IsActive"]">
                    <DisplayTemplate>
                        @if (context.Media.IsActive)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>


              <DataGridColumn TItem="MediaWithNavigationPropertiesDto"
                      Field="ImaarService.Title"
                      Caption="@L["ImaarService"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaWithNavigationPropertiesDto"
                      Field="Vacancy.Title"
                      Caption="@L["Vacancy"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaWithNavigationPropertiesDto"
                      Field="Story.Title"
                      Caption="@L["Story"]">
              </DataGridColumn>

            </DataGridColumns>
            
            
        </DataGrid>
    </CardBody>
</Card>

@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateMediaModal" Closing="@CreateMediaModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateMediaForm">
            <ModalHeader>
                <ModalTitle>@L["NewMedia"]</ModalTitle>
                <CloseButton Clicked="CloseCreateMediaModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewMediaValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewMedia"
                            ValidateOnLoad="false">
                    
                    
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Title"]</FieldLabel>
                            <TextEdit @bind-Text="@NewMedia.Title"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["File"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewMedia.File"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Order"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@NewMedia.Order"  Decimals="0" >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>


                    <Field>
                        <Check TValue="bool" @bind-Checked="@NewMedia.IsActive" >@L["IsActive"]</Check>
                    </Field>

                    <Field>
                        <FieldLabel>@L["ImaarService"]</FieldLabel>
                        <Select TValue="Guid?" @bind-SelectedValue="@NewMedia.ImaarServiceId">
                            <SelectItem TValue="Guid?" Value="null"></SelectItem>
                            @foreach (var imaarService in ImaarServicesCollection)
                            {
                                <SelectItem TValue="Guid?" Value="@(imaarService.Id)">
                                    @(imaarService.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>


                    <Field>
                        <FieldLabel>@L["Vacancy"]</FieldLabel>
                        <Select TValue="Guid?" @bind-SelectedValue="@NewMedia.VacancyId">
                            <SelectItem TValue="Guid?" Value="null"></SelectItem>
                            @foreach (var vacancy in VacanciesCollection)
                            {
                                <SelectItem TValue="Guid?" Value="@(vacancy.Id)">
                                    @(vacancy.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>


                    <Field>
                        <FieldLabel>@L["Story"]</FieldLabel>
                        <Select TValue="Guid?" @bind-SelectedValue="@NewMedia.StoryId">
                            <SelectItem TValue="Guid?" Value="null"></SelectItem>
                            @foreach (var story in StoriesCollection)
                            {
                                <SelectItem TValue="Guid?" Value="@(story.Id)">
                                    @(story.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>


                    
                    
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateMediaModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateMediaForm" Clicked="CreateMediaAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>

