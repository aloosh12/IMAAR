@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        @if (SelectedEvalauations.Any())
        {
            <div class="d-flex justify-content-between align-items-center mb-2">
                @if (AllEvalauationsSelected)
                {
                    <p class="lead mb-0">
                        @L["AllItemsAreSelected", TotalCount]
                    </p>
                }
                else
                {
                    <p class="lead mb-0">
                        @if (SelectedEvalauations.Count > 1)
                        {
                            @L["NumberOfItemsOnThisPageAreSelected", SelectedEvalauations.Count]
                        }
                        else
                        {
                            @L["OneItemOnThisPageIsSelected"]
                        }
                    </p>
                }
                    
                <div>
                    @if ((SelectedEvalauations.Count == PageSize || SelectedEvalauations.Count == EvalauationList.Count) && TotalCount > SelectedEvalauations.Count)
                    {
                        if (!AllEvalauationsSelected)
                        {
                            <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                        }
                        else
                        {
                            <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                        }
                    }
                    
                    <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedEvalauationsAsync">
                        <Icon Name="@IconName.Delete" /> @L["Delete"]
                    </Button>
                </div>
            </div>
            
            <hr class="my-1 mx-0"/>
        }
        <DataGrid TItem="EvalauationWithNavigationPropertiesDto"
                  Data="EvalauationList"
                  
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedEvalauations"
                  RowSelectable="@((args) => CanDeleteEvalauation)"
                  SelectedRowsChanged="SelectedEvalauationRowsChanged"
                  
                  
                  
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                
                @if (CanDeleteEvalauation && EvalauationList.Any())
                {
                    <DataGridMultiSelectColumn TItem="EvalauationWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                
                <DataGridEntityActionsColumn TItem="EvalauationWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="EvalauationWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="EvalauationWithNavigationPropertiesDto"
                                          Visible="@CanEditEvalauation"
                                          Clicked="async () => await OpenEditEvalauationModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="EvalauationWithNavigationPropertiesDto"
                                          Visible="@CanDeleteEvalauation"
                                          Clicked="() => DeleteEvalauationAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
               
              <DataGridColumn TItem="EvalauationWithNavigationPropertiesDto"
                      Field="Evalauation.SpeedOfCompletion"
                      Caption="@L["SpeedOfCompletion"]">
              </DataGridColumn>

              <DataGridColumn TItem="EvalauationWithNavigationPropertiesDto"
                      Field="Evalauation.Dealing"
                      Caption="@L["Dealing"]">
              </DataGridColumn>

              <DataGridColumn TItem="EvalauationWithNavigationPropertiesDto"
                      Field="Evalauation.Cleanliness"
                      Caption="@L["Cleanliness"]">
              </DataGridColumn>

              <DataGridColumn TItem="EvalauationWithNavigationPropertiesDto"
                      Field="Evalauation.Perfection"
                      Caption="@L["Perfection"]">
              </DataGridColumn>

              <DataGridColumn TItem="EvalauationWithNavigationPropertiesDto"
                      Field="Evalauation.Price"
                      Caption="@L["Price"]">
              </DataGridColumn>

              <DataGridColumn TItem="EvalauationWithNavigationPropertiesDto"
                      Field="Evaluatord.SecurityNumber"
                      Caption="@L["Evaluatord"]">
              </DataGridColumn>

              <DataGridColumn TItem="EvalauationWithNavigationPropertiesDto"
                      Field="EvaluatedPerson.SecurityNumber"
                      Caption="@L["EvaluatedPerson"]">
              </DataGridColumn>

            </DataGridColumns>
            
            
        </DataGrid>
    </CardBody>
</Card>

